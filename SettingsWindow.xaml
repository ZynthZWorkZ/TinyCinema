<Window x:Class="TinyCinema.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyCinema"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Opacity="1">
    
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Modern Toggle Style -->
        <Style x:Key="ModernToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12"
                                    BorderThickness="1"
                                    BorderBrush="#3A3A3A"/>
                            <Border x:Name="Thumb"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="10"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" 
                                                    ShadowDepth="1" 
                                                    Opacity="0.2" 
                                                    Color="Black"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#007ACC"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="BorderBrush" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#3A3A3A">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#0F0F0F" 
            CornerRadius="20"
            BorderThickness="1"
            BorderBrush="#2A2A2A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Settings Title Bar -->
            <Grid Grid.Row="0" 
                  Background="#1A1A1A"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Settings Title -->
                <StackPanel Orientation="Horizontal" 
                          Margin="12,0,0,0"
                          VerticalAlignment="Center">
                    <fa:FontAwesome Icon="Cog" 
                                   Foreground="White"
                                   Width="14" 
                                   Height="14"
                                   Margin="0,0,8,0"/>
                    <TextBlock Text="Settings" 
                             Foreground="White"
                             FontSize="14"
                             VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Close Settings Button -->
                <Button Grid.Column="1"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click">
                    <fa:FontAwesome Icon="Close" 
                                   Foreground="White"
                                   Width="12" 
                                   Height="12"/>
                </Button>
            </Grid>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="24">
                <StackPanel>
                    <TextBlock Text="Settings"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"
                             Margin="0,0,0,24"/>
                    
                    <!-- Cache Location Setting -->
                    <Border Background="#1A1A1A"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Setting Title -->
                            <StackPanel Orientation="Horizontal" 
                                      Margin="0,0,0,12">
                                <fa:FontAwesome Icon="Folder" 
                                               Foreground="White"
                                               Width="16" 
                                               Height="16"
                                               Margin="0,0,8,0"/>
                                <TextBlock Text="Image Cache Settings" 
                                         Foreground="White"
                                         FontSize="16"
                                         FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <!-- Enable Caching Toggle -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Enable Image Caching"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                                
                                <ToggleButton Grid.Column="1"
                                             IsChecked="{Binding IsCachingEnabled}"
                                             Style="{StaticResource ModernToggleStyle}"/>
                            </Grid>
                            
                            <!-- Cache Path and Button -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding CacheLocation}"
                                         Foreground="#B3FFFFFF"
                                         TextWrapping="Wrap"
                                         VerticalAlignment="Center"
                                         Margin="0,0,16,0"/>
                                
                                <Button Grid.Column="1"
                                        Content="Change Location"
                                        Click="SelectCacheLocation_Click"
                                        Style="{StaticResource ModernButtonStyle}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Movie Links File Location Setting -->
                    <Border Background="#1A1A1A"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Setting Title -->
                            <StackPanel Orientation="Horizontal" 
                                      Margin="0,0,0,12">
                                <fa:FontAwesome Icon="File" 
                                               Foreground="White"
                                               Width="16" 
                                               Height="16"
                                               Margin="0,0,8,0"/>
                                <TextBlock Text="Movie Links File Settings" 
                                         Foreground="White"
                                         FontSize="16"
                                         FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <!-- Movie Links File Path and Button -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding MovieLinksLocation}"
                                         Foreground="#B3FFFFFF"
                                         TextWrapping="Wrap"
                                         VerticalAlignment="Center"
                                         Margin="0,0,16,0"/>
                                
                                <Button Grid.Column="1"
                                        Content="Change Location"
                                        Click="SelectMovieLinksLocation_Click"
                                        Style="{StaticResource ModernButtonStyle}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window> 