<Window x:Class="TinyCinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyCinema"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="TinyCinema" Height="900" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Opacity="1">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Font Resources -->
        <FontFamily x:Key="AbsoluteXeroFont">pack://application:,,,/Assets/Absolute Xero.otf#Absolute Xero</FontFamily>
        
        <!-- Modern Toggle Style -->
        <Style x:Key="ModernToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12"
                                    BorderThickness="1"
                                    BorderBrush="#3A3A3A"/>
                            <Border x:Name="Thumb"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="10"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" 
                                                    ShadowDepth="1" 
                                                    Opacity="0.2" 
                                                    Color="Black"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#007ACC"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="BorderBrush" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#3A3A3A">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Window Opacity Animation -->
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"
                From="1" To="0.7" Duration="0:0:0.1"/>
        </Storyboard>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"
                From="0.7" To="1" Duration="0:0:0.1"/>
        </Storyboard>
        
        <!-- Window Button Style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="40,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="#2A2A2A">
                            <Grid>
                                <!-- Modern Search Icon -->
                                <fa:FontAwesome Icon="Search" 
                                               Foreground="#666666"
                                               Width="16" 
                                               Height="16"
                                               HorizontalAlignment="Left"
                                               Margin="15,0,0,0"/>
                                
                                <TextBlock Text="Search movies..."
                                         Foreground="#666666"
                                         Margin="40,12,0,0"
                                         FontSize="14"
                                         Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="0" 
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListView Item Container Style -->
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="12,6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border"
                                Background="#1A1A1A"
                                CornerRadius="16"
                                BorderThickness="1"
                                BorderBrush="#2A2A2A">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#252525"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#0F0F0F" 
            CornerRadius="20"
            BorderThickness="1"
            BorderBrush="#2A2A2A">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" 
                  Background="#1A1A1A"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <TextBlock Text="TinyCinema" 
                          Foreground="White"
                          FontSize="14"
                          Margin="12,0,0,0"
                          VerticalAlignment="Center"/>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Click="SettingsButton_Click">
                        <fa:FontAwesome Icon="Cog" 
                                       Foreground="White"
                                       Width="14" 
                                       Height="14"/>
                    </Button>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Click="MinimizeButton_Click">
                        <fa:FontAwesome Icon="WindowMinimize" 
                                       Foreground="White"
                                       Width="12" 
                                       Height="12"/>
                    </Button>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Click="MaximizeButton_Click">
                        <fa:FontAwesome Icon="WindowMaximize" 
                                       Foreground="White"
                                       Width="12" 
                                       Height="12"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click">
                        <fa:FontAwesome Icon="Close" 
                                       Foreground="White"
                                       Width="12" 
                                       Height="12"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Modern Gradient Header -->
            <Border Grid.Row="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A1A1A" Offset="0"/>
                        <GradientStop Color="#0F0F0F" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="24,16">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Icon="Film" 
                                       Foreground="White"
                                       Width="16" 
                                       Height="16"
                                       Margin="0,0,8,0"/>
            <TextBlock Text="TinyCinema" 
                                  FontFamily="{StaticResource AbsoluteXeroFont}"
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="2" 
                                                Direction="330" 
                                                Color="#000000" 
                                                Opacity="0.4" 
                                                BlurRadius="5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="{Binding MovieCount, StringFormat=' ({0} movies)'}"
                                 FontSize="14"
                                 Foreground="#B3FFFFFF"
                                 Margin="8,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
        </Border>

            <!-- Modern Search Bar -->
            <Border Grid.Row="2" 
                    Background="#0F0F0F" 
                    Padding="24,20"
                    BorderThickness="0,1,0,1"
                    BorderBrush="#1A1A1A">
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource SearchBoxStyle}"
                     TextChanged="SearchBox_TextChanged"/>
        </Border>

            <!-- Modern Movie List -->
            <ScrollViewer Grid.Row="3" 
                         VerticalScrollBarVisibility="Hidden"
                         HorizontalScrollBarVisibility="Disabled"
                         PanningMode="VerticalOnly"
                         IsDeferredScrollingEnabled="True"
                         CanContentScroll="True"
                         Background="#0F0F0F"
                         PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <ListView x:Name="MoviesListView" 
                         Grid.Row="1" 
                         Margin="20,0,20,20"
                     Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         MouseLeftButtonDown="MoviesListView_MouseLeftButtonDown"
                         MouseMove="MoviesListView_MouseMove"
                         MouseLeftButtonUp="MoviesListView_MouseLeftButtonUp"
                         KeyDown="MoviesListView_KeyDown"
                         PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                <ListView.ItemTemplate>
                    <DataTemplate>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Movie Poster -->
                                <Border Grid.Column="0" 
                                        Width="120" 
                                        Height="180" 
                                        CornerRadius="8"
                                        Background="#1A1A1A"
                                        ClipToBounds="True">
                                    <Grid>
                                        <!-- Loading Placeholder -->
                                        <Border Background="#2A2A2A" 
                                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <fa:FontAwesome Icon="Spinner" 
                                                           Foreground="#666666"
                                                           Width="32" 
                                                           Height="32"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                                <fa:FontAwesome.RenderTransform>
                                                    <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                                                </fa:FontAwesome.RenderTransform>
                                                <fa:FontAwesome.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation 
                                                                    Storyboard.TargetName="SpinnerRotation"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    From="0" To="360" Duration="0:0:1"
                                                                    RepeatBehavior="Forever"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </fa:FontAwesome.Triggers>
                                            </fa:FontAwesome>
                                        </Border>
                                        
                                        <!-- Movie Poster Image -->
                                        <Image Source="{Binding CachedImage}" 
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality">
                                            <Image.Effect>
                                                <DropShadowEffect BlurRadius="10" 
                                                                ShadowDepth="2" 
                                                                Opacity="0.3" 
                                                                Color="Black"/>
                                            </Image.Effect>
                                        </Image>
                                    </Grid>
                                </Border>

                                <!-- Movie Info -->
                                <StackPanel Grid.Column="1" 
                                          Margin="16,0,0,0" 
                                          VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}" 
                                             FontSize="16" 
                                             FontWeight="SemiBold" 
                                          Foreground="White"
                                          TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Year}" 
                                              FontSize="14" 
                                              Foreground="#B3FFFFFF" 
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
            </ListView>
        </ScrollViewer>

            <!-- Settings Panel -->
            <Grid x:Name="SettingsPanel" 
                  Grid.Row="0" 
                  Grid.RowSpan="4"
                  Background="#0F0F0F"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Settings Title Bar -->
                <Grid Grid.Row="0" 
                      Background="#1A1A1A"
                      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Settings Title -->
                    <StackPanel Orientation="Horizontal" 
                              Margin="12,0,0,0"
                              VerticalAlignment="Center">
                        <fa:FontAwesome Icon="Cog" 
                                       Foreground="White"
                                       Width="14" 
                                       Height="14"
                                       Margin="0,0,8,0"/>
                        <TextBlock Text="Settings" 
                                 Foreground="White"
                                 FontSize="14"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Close Settings Button -->
                    <Button Grid.Column="1"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseSettingsButton_Click">
                        <fa:FontAwesome Icon="Close" 
                                       Foreground="White"
                                       Width="12" 
                                       Height="12"/>
                    </Button>
                </Grid>

                <!-- Settings Content -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Padding="24">
                    <StackPanel>
                        <TextBlock Text="Settings"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 Margin="0,0,0,24"/>
                        
                        <!-- Cache Location Setting -->
                        <Border Background="#1A1A1A"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Setting Title -->
                                <StackPanel Orientation="Horizontal" 
                                          Margin="0,0,0,12">
                                    <fa:FontAwesome Icon="Folder" 
                                                   Foreground="White"
                                                   Width="16" 
                                                   Height="16"
                                                   Margin="0,0,8,0"/>
                                    <TextBlock Text="Image Cache Settings" 
                                             Foreground="White"
                                             FontSize="16"
                                             FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <!-- Enable Caching Toggle -->
                                <Grid Grid.Row="1" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Enable Image Caching"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                                    
                                    <ToggleButton Grid.Column="1"
                                                 IsChecked="{Binding IsCachingEnabled}"
                                                 Style="{StaticResource ModernToggleStyle}"/>
                                </Grid>
                                
                                <!-- Cache Path and Button -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding CacheLocation}"
                                             Foreground="#B3FFFFFF"
                                             TextWrapping="Wrap"
                                             VerticalAlignment="Center"
                                             Margin="0,0,16,0"/>
                                    
                                    <Button Grid.Column="1"
                                            Content="Change Location"
                                            Click="SelectCacheLocation_Click"
                                            Style="{StaticResource ModernButtonStyle}"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Movie Links File Location Setting -->
                        <Border Background="#1A1A1A"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Setting Title -->
                                <StackPanel Orientation="Horizontal" 
                                          Margin="0,0,0,12">
                                    <fa:FontAwesome Icon="File" 
                                                   Foreground="White"
                                                   Width="16" 
                                                   Height="16"
                                                   Margin="0,0,8,0"/>
                                    <TextBlock Text="Movie Links File Settings" 
                                             Foreground="White"
                                             FontSize="16"
                                             FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <!-- Movie Links File Path and Button -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding MovieLinksLocation}"
                                             Foreground="#B3FFFFFF"
                                             TextWrapping="Wrap"
                                             VerticalAlignment="Center"
                                             Margin="0,0,16,0"/>
                                    
                                    <Button Grid.Column="1"
                                            Content="Change Location"
                                            Click="SelectMovieLinksLocation_Click"
                                            Style="{StaticResource ModernButtonStyle}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
    </Grid>
    </Border>
</Window>
